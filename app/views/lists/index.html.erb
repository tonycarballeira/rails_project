<h1>list of lists</h1>
<br>
<table class="gridtable text-center">
  <thead>
    <tr>
      <th>list name</th>
      <th>description</th>
      <th>go to list</th>
      <th>change</th>
      <th>remove</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.description %></td>
        <td><%= link_to 'Show', list_todo_items_path(list) %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, id: "new_list_link" %>
