<h1>list of lists</h1>
<br>
<div class="gridtable">
  
<h2><%= link_to 'add a new list', new_list_path, id: "new_list_link" %>
</h2>
  
</div>
<table class="gridtable">
  <thead>
    <tr>
      <th>list name</th>
      <th>description</th>
      <th>go to list</th>
      <th>change</th>
      <th>remove</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.lists.each do |list| %>
      <tr>
      
        <td><%= best_in_place list, :name %></td>
        <td><%= best_in_place list, :description %></td>
        <td><%= link_to 'Show', list_todo_items_path(list) %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


